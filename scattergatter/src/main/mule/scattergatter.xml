		<logger level="INFO" doc:name="Logger" doc:id="727e895d-6368-459f-b7c6-77f2a452a321" message="before scatter gather"/>
		<set-payload value="before scater gather" doc:name="Set Payload" doc:id="1b7b5f8b-e7b7-4c5f-bfb8-483eb2f54f96" />
		<scatter-gather doc:name="Scatter-Gather" doc:id="783a6257-ae4c-48a7-baa4-3436ba0f9913" >
			<route >
				<logger level="INFO" doc:name="Logger" doc:id="0b489778-228e-4463-b867-adf8a3c5d222" message="logger1 in scatter"/>
				<set-payload value="after scater gather 1" doc:name="Set Payload" doc:id="e43c6462-5077-481d-b32d-cc299ab0a5d3" />
			</route>
			<route >
				<logger level="INFO" doc:name="Logger" doc:id="7ea4401c-651c-4361-b41c-6ae29bc1a460" message="logger2  in scatter gather"/>
